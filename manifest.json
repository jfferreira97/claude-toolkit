{
    "manifest_version": 3,
    "name": "Claude toolkit",
    "version": "1.0",
    "description": "Provides various QOL changes to boost productivity with Anthropic's Claude",
    "permissions": [
        "webRequest",
        "storage"
    ],
    "host_permissions": [
        "https://*.claude.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "devtools_page": "devtools/devtools.html"
}